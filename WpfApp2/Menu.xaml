<UserControl x:Class="Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <UserControl.DataContext>
    <local:MenuViewModel></local:MenuViewModel>
  </UserControl.DataContext>
  <Grid>
    <TreeView HorizontalAlignment="Left" Height="317" Margin="88,42,0,0" VerticalAlignment="Top" Width="538" Name="tree1">
      <TreeView.ItemTemplate>
        <HierarchicalDataTemplate DataType="{x:Type local:MenuITem}" ItemsSource="{Binding Items}">
          <TextBlock Text="{Binding Caption}" />
        </HierarchicalDataTemplate>
      </TreeView.ItemTemplate>
    </TreeView>

  </Grid>
</UserControl>
